{
  "automerge": true,
  "automergeType": "branch",
  "docker": {
    "major": {
      "enabled": true
    },
    "pinDigests": true
  },
  "docker-compose": {
    "fileMatch": ["(^|/)(stack|production)[^/]*\\.ya?ml$"]
  },
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "git-submodules": {
    "enabled": true
  },
  "lockFileMaintenance": { "enabled": true },
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "packagePatterns": [
        "snyk"
      ],
      "schedule": [
        "before 3am on Monday"
      ]
    }
  ]
}
