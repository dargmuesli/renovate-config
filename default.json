{
  "automerge": true,
  "automergeType": "branch",
  "baseBranches": ["alpha", "beta", "master"],
  "docker": {
    "major": {
      "enabled": true
    },
    "pinDigests": false // `true` would lead to incompatibility with different architectures, like ARM on Apple's M1 processor
  },
  "docker-compose": {
    "fileMatch": ["(^|/)(stack|production)[^/]*\\.ya?ml$"]
  },
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "git-submodules": {
    "enabled": true
  },
  "lockFileMaintenance": { "enabled": true },
  "major": {
    "automerge": false
  }
}
