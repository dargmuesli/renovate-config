{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeType": "branch",
  "docker-compose": {
    "managerFilePatterns": [
      "/^src/(development/stack|production/production)\\.ya?ml$/"
    ]
  },
  "extends": [
    "config:best-practices",
    "group:allNonMajor",
    ":disableDependencyDashboard",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":widenPeerDependencies"
  ],
  "git-submodules": {
    "enabled": true
  },
  "ignorePresets": [
    "docker:pinDigests",
    ":ignoreModulesAndTests"
  ],
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "major": {
        "enabled": true
      }
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "rangeStrategy": "update-lockfile"
    },
    {
      "groupName": "playwright monorepo",
      "matchPackageNames": [
        "@playwright/test",
        "mcr.microsoft.com/playwright",
        "playwright-core"
      ]
    },
    {
      "groupName": "@dargmuesli/nuxt-vio",
      "matchPackageNames": [
        "@dargmuesli/nuxt-vio",
        "@dargmuesli/nuxt-vio-testing"
      ]
    }
  ],
  "printConfig": true,
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "node",
      "depNameTemplate": "node",
      "managerFilePatterns": [
        "/^Dockerfile$/"
      ],
      "matchStrings": [
        "FROM node:(?<currentValue>.*?)-(alpine|slim)\\n"
      ],
      "versioningTemplate": "node"
    }
  ]
}
